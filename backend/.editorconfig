# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Python files
[*.py]
indent_style = space
indent_size = 4
max_line_length = 88

# Configuration files
[*.{json,jsonc}]
indent_style = space
indent_size = 2

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.toml]
indent_style = space
indent_size = 4

[*.ini]
indent_style = space
indent_size = 4

[*.cfg]
indent_style = space
indent_size = 4

# Web files
[*.{html,htm}]
indent_style = space
indent_size = 2

[*.{css,scss,less}]
indent_style = space
indent_size = 2

[*.{js,ts,jsx,tsx}]
indent_style = space
indent_size = 2

# Markdown
[*.{md,mdx}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# Docker
[{Dockerfile*,*.dockerfile}]
indent_style = space
indent_size = 4

[docker-compose*.yml]
indent_style = space
indent_size = 2

# Shell scripts
[*.{sh,bash,zsh}]
indent_style = space
indent_size = 2

# SQL
[*.sql]
indent_style = space
indent_size = 2

# XML
[*.{xml,svg}]
indent_style = space
indent_size = 2

# Makefile (requires tabs)
[{Makefile,makefile,*.mk}]
indent_style = tab
indent_size = 4

# Requirements files
[requirements*.txt]
indent_style = space
indent_size = 4

# Git
[{.gitignore,.gitattributes}]
indent_style = space
indent_size = 4

# Django migrations (keep existing formatting)
[*/migrations/*.py]
trim_trailing_whitespace = false
